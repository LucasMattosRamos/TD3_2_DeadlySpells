<UserControl x:Class="DeadlySpells.UCMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#80000000">
        
        <Border Background="#FF1F1F2E"  CornerRadius="10" Padding="20" Width="300"  HorizontalAlignment="Center"  VerticalAlignment="Center">
            <StackPanel>

              
                <TextBlock Text="Menu" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Button x:Name="butRetourPartie" Content="Reprendre la partie"  Margin="0,0,0,10" Height="35" />

                <Button x:Name="butAccueil" Content="Retour à l'accueil" Margin="0,0,0,20" Height="35" />

                <TextBlock Text="Volume"  Foreground="White"  Margin="0,0,0,5"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1"
        IsSnapToTickEnabled="True" Margin="0,0,0,10" Height="30" ValueChanged="sliderVolume_ValueChanged"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
