<UserControl x:Class="DeadlySpells.UCMapTombe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True"
             KeyDown="UserControl_KeyDown"
             MouseDown="UserControl_MouseDown">

    <Viewbox Stretch="Uniform">

        <Canvas x:Name="MapTombe" Width="800" Height="450">

            <!-- Fond -->
            <Canvas.Background>
                <ImageBrush ImageSource="/Images maps/fondTombe.png" Stretch="Fill"/>
            </Canvas.Background>

            <!-- Sol -->
            <Image Source="/Images maps/SolTombe.png"
                   Canvas.Left="58" Canvas.Top="259"
                   Width="684" Height="96"
                   Stretch="Fill" Panel.ZIndex="1" />

            <!-- Epines -->
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="0"   Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="154" Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="288" Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="429" Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="574" Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesTombe.png" Canvas.Left="710" Canvas.Top="373" Width="176" Height="96" Stretch="Fill" Panel.ZIndex="2"/>

            <!-- Joueur 1 -->
            <Image x:Name="imgJoueur1"
                   Canvas.Left="126" Canvas.Top="209"
                   Width="100" Height="100"
                   Panel.ZIndex="10"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur1" ScaleX="1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <!-- Joueur 2 -->
            <Image x:Name="imgJoueur2"
                   Canvas.Left="555" Canvas.Top="209"
                   Width="100" Height="100"
                   Panel.ZIndex="10"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur2" ScaleX="-1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <!-- Bandeau vies -->
            <Grid Width="800" Height="80" Panel.ZIndex="50">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,10,0,0">
                    <TextBlock Text="JOUEUR 1" FontFamily="Segoe UI Black" FontSize="20" Foreground="#FF5E5E"
                               VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="txtViesJ1" Text="❤️❤️❤️" FontSize="24" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,20,0">
                    <TextBlock x:Name="txtViesJ2" Text="❤️❤️❤️" FontSize="24" VerticalAlignment="Center"
                               Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="JOUEUR 2" FontFamily="Segoe UI Black" FontSize="20" Foreground="#5EA2FF"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Bouton Menu -->
            <Button x:Name="butMenu"
                    Content="Menu" Width="80" Height="30"
                    Canvas.Right="10" Canvas.Top="80"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White"
                    FontSize="16" Panel.ZIndex="100"/>

            <!-- Ecran de fin de partie -->
            <Grid x:Name="GridFinDePartie" Width="800" Height="450" Panel.ZIndex="200" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.85"/>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="VICTOIRE !" 
                               FontSize="60" FontWeight="Bold" Foreground="#FFD700" 
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Orange" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtGagnant" 
                               Text="Le Joueur X a gagné" 
                               FontSize="30" Foreground="White" 
                               HorizontalAlignment="Center" Margin="0,10,0,30"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="REJOUER" Click="BtnRejouer_Click" 
                                Width="160" Height="50" FontSize="20" Background="White" FontWeight="Bold" 
                                Margin="10,0,10,0"/>
                        <Button Content="QUITTER" Click="BtnQuitter_Click" 
                                Width="160" Height="50" FontSize="20" Background="Gray" Foreground="White" FontWeight="Bold" 
                                Margin="10,0,10,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Canvas>
    </Viewbox>
</UserControl>
