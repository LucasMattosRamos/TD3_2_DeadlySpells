<UserControl x:Class="DeadlySpells.UCMapGlace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Viewbox Stretch="Uniform">

        <Canvas x:Name="MapGlace" Width="1920" Height="1080">
            <Canvas.Background>
                <ImageBrush ImageSource="/Images maps/FondGlace.png" Stretch="Fill"/>
            </Canvas.Background>

            <Image Source="/Images maps/epinesGlace.png" Width="429" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-30"/>

            <Image Source="/Images maps/SolGlace.png" Canvas.Left="150" Canvas.Top="327" Width="1620" Height="600" Stretch="Fill" Panel.ZIndex="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Image x:Name="imgJoueur1" Canvas.Left="299" Canvas.Top="494" Width="200" Height="200" Panel.ZIndex="10"/>
            <Image x:Name="imgJoueur2" Canvas.Left="1416" Canvas.Top="494" Width="200" Height="200" Panel.ZIndex="10"/>

            <Button x:Name="butMenu" Content="Menu" Width="100" Height="40" Canvas.Right="30" Canvas.Top="30"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontSize="18" Panel.ZIndex="100"/>
            <Image Source="/Images maps/epinesGlace.png" Width="429" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="354" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="746" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="1139" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="1516" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        </Canvas>
    </Viewbox>
</UserControl>
