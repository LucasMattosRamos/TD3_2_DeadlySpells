<UserControl x:Class="DeadlySpells.UCMapGlace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Focusable="True"
             KeyDown="UserControl_KeyDown" MouseDown="UserControl_MouseDown">

    <Viewbox Stretch="Uniform">
        
        <Canvas x:Name="MapGlace" Width="1920" Height="1080">

            <Canvas.Background>
                <ImageBrush ImageSource="/Images maps/FondGlace.png" Stretch="Fill"/>
            </Canvas.Background>

            <Image Source="/Images maps/SolGlace.png"
                   Canvas.Left="150" Canvas.Top="327"
                   Width="1620" Height="600"
                   Stretch="Fill" Panel.ZIndex="1"/>

            <Image Source="/Images maps/epinesGlace.png" Width="429" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="-30"/>
            <Image Source="/Images maps/epinesGlace.png" Width="429" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="354"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="746"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="1139"/>
            <Image Source="/Images maps/epinesGlace.png" Width="428" Height="359" Canvas.Top="750" Stretch="Fill" Panel.ZIndex="5" Canvas.Left="1516"/>

            <Image x:Name="imgJoueur1"
                   Canvas.Left="299" Canvas.Top="494"
                   Width="200" Height="200"
                   Panel.ZIndex="10"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur1" ScaleX="1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="imgJoueur2"
                   Canvas.Left="1416" Canvas.Top="494"
                   Width="200" Height="200"
                   Panel.ZIndex="10"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur2" ScaleX="-1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <Grid Width="1920" Height="150" Panel.ZIndex="50">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="50,20,0,0">
                    <TextBlock Text="JOUEUR 1" FontFamily="Segoe UI Black" FontSize="30" Foreground="#FF5E5E" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="txtViesJ1" Text="❤️❤️❤️" FontSize="40" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,50,0">
                    <TextBlock x:Name="txtViesJ2" Text="❤️❤️❤️" FontSize="40" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="White"/>
                    <TextBlock Text="JOUEUR 2" FontFamily="Segoe UI Black" FontSize="30" Foreground="#5EA2FF" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <Button x:Name="butMenu" 
                    Content="Menu" 
                    Width="100" Height="40" 
                    Canvas.Right="30" Canvas.Top="100"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White"
                    FontSize="18"
                    Panel.ZIndex="100"/>

            <Grid x:Name="GridFinDePartie" Width="1920" Height="1080" Panel.ZIndex="200" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.85"/>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="VICTOIRE !" 
                               FontSize="120" FontWeight="Bold" Foreground="#FFD700" 
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Orange" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtGagnant" 
                               Text="Le Joueur X a gagné" 
                               FontSize="60" Foreground="White" 
                               HorizontalAlignment="Center" Margin="0,20,0,50"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="REJOUER" Click="BtnRejouer_Click" 
                                Width="250" Height="80" FontSize="35" Background="White" FontWeight="Bold" 
                                Margin="20,0,20,0"/>
                        <Button Content="QUITTER" Click="BtnQuitter_Click" 
                                Width="250" Height="80" FontSize="35" Background="Gray" Foreground="White" FontWeight="Bold" 
                                Margin="20,0,20,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Canvas>
    </Viewbox>
</UserControl>
