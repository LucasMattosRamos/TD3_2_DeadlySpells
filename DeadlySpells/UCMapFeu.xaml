<UserControl x:Class="DeadlySpells.UCMapFeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Images maps/Fond Feu.png"/>
        </Grid.Background>
        
        <Image Margin="80,141,113,-38" Source="/Images maps/SolFeu.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.626"/>
                    <RotateTransform/>
                    <TranslateTransform X="-2.453"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Margin="400,288,123,0" Source="/Images maps/epinesFeu.png" Stretch="Fill"/>
        <Image Margin="677,288,0,0" Source="/Images maps/epinesFeu.png" Stretch="Fill"/>
        <Image Margin="87,288,400,0" Source="/Images maps/epinesFeu.png" Stretch="Fill"/>
        <Image Margin="0,288,677,0" Source="/Images maps/epinesFeu.png" Stretch="Fill"/>

        <Image x:Name="imgJoueur1" Margin="-150,100,0,0" Width="100" Height="100"/>
        <Image x:Name="imgJoueur2" Margin="150,100,0,0" Width="100" Height="100"/>

        <Button x:Name="butMenu" Content="Menu" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" />

    </Grid>
</UserControl>
