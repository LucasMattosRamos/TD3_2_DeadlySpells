<UserControl x:Class="DeadlySpells.UCMapFeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920"
             Focusable="True"
             KeyDown="UserControl_KeyDown"
             MouseDown="UserControl_MouseDown">

    <Viewbox Stretch="Uniform">
        <Canvas x:Name="MapFeu" Width="1920" Height="1080">

            <!-- Fond -->
            <Canvas.Background>
                <ImageBrush ImageSource="/Images maps/Fond Feu.png"/>
            </Canvas.Background>

            <!-- Sol -->
            <Image Source="/Images maps/SolFeu.png" 
                   Canvas.Left="80" Canvas.Top="141"
                   Width="1727" Height="977"
                   Stretch="Fill" 
                   RenderTransformOrigin="0.5,0.5"
                   Panel.ZIndex="1">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.626"/>
                        <RotateTransform/>
                        <TranslateTransform X="-2.453"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <!-- Epines -->
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="0"    Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="276"  Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="539"  Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="793"  Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="1039" Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="1279" Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="1516" Canvas.Top="831" Width="281" Height="249" Stretch="Fill" Panel.ZIndex="2"/>
            <Image Source="/Images maps/epinesFeu.png" Canvas.Left="1656" Canvas.Top="831" Width="280" Height="249" Stretch="Fill" Panel.ZIndex="2"/>

            <!-- Joueur 1 -->
            <Image x:Name="imgJoueur1" 
                   Canvas.Left="522" Canvas.Top="368" 
                   Width="200" Height="200"
                   Panel.ZIndex="10"
                   RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur1" ScaleX="1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <!-- Joueur 2 -->
            <Image x:Name="imgJoueur2" 
                   Canvas.Left="1143" Canvas.Top="368" 
                   Width="200" Height="200" 
                   RenderTransformOrigin="0.47,0.43"
                   Panel.ZIndex="10">
                <Image.RenderTransform>
                    <ScaleTransform x:Name="scaleJoueur2" ScaleX="-1" ScaleY="1"/>
                </Image.RenderTransform>
            </Image>

            <!-- Bandeau vies -->
            <Grid Width="1920" Height="150" Panel.ZIndex="50">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="50,20,0,0">
                    <TextBlock Text="JOUEUR 1" FontFamily="Segoe UI Black" FontSize="30" Foreground="#FF5E5E" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock x:Name="txtViesJ1" Text="❤️❤️❤️" FontSize="40" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,50,0">
                    <TextBlock x:Name="txtViesJ2" Text="❤️❤️❤️" FontSize="40" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="White"/>
                    <TextBlock Text="JOUEUR 2" FontFamily="Segoe UI Black" FontSize="30" Foreground="#5EA2FF" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Bouton Menu -->
            <Button x:Name="butMenu" 
                    Content="Menu" 
                    Width="100" Height="40" 
                    Canvas.Right="30" Canvas.Top="100"
                    BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White"
                    FontSize="18"
                    Panel.ZIndex="100"/>

            <!-- Ecran de fin de partie -->
            <Grid x:Name="GridFinDePartie" Width="1920" Height="1080" Panel.ZIndex="200" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.85"/>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="VICTOIRE !" 
                               FontSize="120" FontWeight="Bold" Foreground="#FFD700" 
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Orange" BlurRadius="20" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtGagnant" 
                               Text="Le Joueur X a gagné" 
                               FontSize="60" Foreground="White" 
                               HorizontalAlignment="Center" Margin="0,20,0,50"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="REJOUER" Click="BtnRejouer_Click" 
                                Width="250" Height="80" FontSize="35" Background="White" FontWeight="Bold" 
                                Margin="20,0,20,0"/>
                        <Button Content="QUITTER" Click="BtnQuitter_Click" 
                                Width="250" Height="80" FontSize="35" Background="Gray" Foreground="White" FontWeight="Bold" 
                                Margin="20,0,20,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

        </Canvas>
    </Viewbox>
</UserControl>
