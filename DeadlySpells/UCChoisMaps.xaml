<UserControl x:Class="DeadlySpells.UCChoisMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Label x:Name="labConsigne" Content="CHOIX DES MAPS" Margin="242,38,60,357" Foreground="White" FontSize="42" FontFamily="Goudy Old Style" Width="498" Height="55"/>

        <RadioButton x:Name="sorcierfeu" Width="150" Height="150" Margin="46,150,604,150">
            <RadioButton.Content>
                <Image Source="/Images maps/Fond Feu.png" Width="138" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="sorcierOrage" Width="150" Height="150">
            <RadioButton.Content>
                <Image Source="/Images maps/fondTombe.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="sorcierglace" Width="150" Height="150" Margin="602,150,48,150" >
            <RadioButton.Content>
                <Image Source="/Images maps/FondGlace.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <Button x:Name="butRetour" Content="RETOUR" Margin="54,395,626,0" RenderTransformOrigin="0.549,-1.067" BorderBrush="{x:Null}" Foreground="Black" FontSize="20" Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontWeight="Bold"/>
        <Button x:Name="butJouer" Content="JOUER" Margin="643,395,37,0" RenderTransformOrigin="0.549,-1.067" BorderBrush="{x:Null}" Foreground="Black" FontSize="20" Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontWeight="Bold"/>
    </Grid>
</UserControl>
