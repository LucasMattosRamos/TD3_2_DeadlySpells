<UserControl x:Class="DeadlySpells.UCChoisMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="butJouer" Content="JOUER" Margin="623,416,57,-21"  Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontSize="20" Click="butJouer_Click"/>

        <Label x:Name="labConsigne" Content="CHOIX DES MAPS" Margin="242,38,60,357" Foreground="White" FontSize="42" FontFamily="Goudy Old Style" Width="498" Height="55"/>

        <RadioButton x:Name="MapFeu" Margin="300,150,300,100" Checked="MapFeu_Checked" Width="200" Height="200">
            <RadioButton.Content>
                <Image Source="/Images maps/AffFeu.png" Width="181" Height="180"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="MapTombe" Margin="34,152,566,98" Width="200" Height="200">
            <RadioButton.Content>
                <Image Source="/Images maps/AffTombe.png" Width="180" Height="180"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="MapGlace" Width="200" Height="200" Margin="550,150,17,100" >
            <RadioButton.Content>
                <Image Source="/Images maps/AffGlace.png" Width="181" Height="180"/>
            </RadioButton.Content>
        </RadioButton>
        <Button x:Name="butRetour" Content="RETOUR" Margin="57,416,623,-21" RenderTransformOrigin="0.549,-1.067" BorderBrush="{x:Null}" Foreground="Black" FontSize="20" Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120"/>
    </Grid>
</UserControl>
