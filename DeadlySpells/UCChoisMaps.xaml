<UserControl x:Class="DeadlySpells.UCChoisMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="butJouer" Content="Jouer" HorizontalAlignment="Left" Margin="678,375,0,0" VerticalAlignment="Top" Height="38" Width="77" FontSize="20"/>

        <Label x:Name="labConsigne" Content="Choix des Maps" Margin="0,50,0,0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18"/>

        <RadioButton x:Name="sorcierfeu" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="105,0,0,0">
            <RadioButton.Content>
                <Image Source="/Images maps/Fond Feu.png" Width="138" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="sorcierOrage" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <RadioButton.Content>
                <Image Source="/Images maps/fondTombe.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="sorcierglace" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="549,0,0,0" >
            <RadioButton.Content>
                <Image Source="/Images maps/FondGlace.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
    </Grid>
</UserControl>
