<UserControl x:Class="DeadlySpells.UCChoisMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="butJouer" Content="JOUER" Margin="623,416,57,-21"  Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontSize="20" FontWeight="Bold"/>



        <RadioButton x:Name="RadMapFeu" Width="198" Height="182" Margin="0,0,500,0">
            <RadioButton.Content>
                <Image Source="/Images maps/AffFeu.png" Width="180" Height="180"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="RadMapTombe" Width="198" Height="183">
            <RadioButton.Content>
                <Image Source="/Images maps/AffTombe.png" Width="180" Height="180"/>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton x:Name="RadMapGlace" Width="198" Height="182" Margin="500,0,0,0" >
            <RadioButton.Content>
                <Image Source="/Images maps/AffGlace.png" Width="180" Height="180"/>
            </RadioButton.Content>
        </RadioButton>
        <Button x:Name="butRetour" Content="RETOUR" Margin="57,416,623,-21" RenderTransformOrigin="0.549,-1.067" BorderBrush="{x:Null}" Foreground="Black" FontSize="20" Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontWeight="Bold"/>
        <TextBlock Margin="223,27,223,370" TextWrapping="Wrap" Text="CHOIX DES MAPS" FontFamily="Goudy Old Style" FontSize="42" Foreground="White" FontWeight="Bold" Width="354"/>
    </Grid>
</UserControl>
