<UserControl x:Class="DeadlySpells.UCChoisMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeadlySpells"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Margin="0,27,0,0" Text="CHOIX DES MAPS" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontFamily="Goudy Old Style" FontSize="42" Foreground="White" FontWeight="Bold"/>

        <Button x:Name="butJouer" Content="JOUER" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,30"
                Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontSize="20" FontWeight="Bold"/>

        <Button x:Name="butRetour" Content="RETOUR" 
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,30"
                BorderBrush="{x:Null}" Foreground="Black" FontSize="20" Background="#FFFFE012" FontFamily="Goudy Old Style" Height="55" Width="120" FontWeight="Bold"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <RadioButton x:Name="RadMapFeu" GroupName="Cartes" Click="RadMapFeu_Click"
                         Width="198" Height="182">
                <RadioButton.Content>
                    <Image Source="/Images maps/AffFeu.png" Width="180" Height="180"/>
                </RadioButton.Content>
            </RadioButton>

            <RadioButton x:Name="RadMapTombe" GroupName="Cartes" Click="RadMapTombe_Click"
                         Width="198" Height="183" Margin="30,0,30,0">
                <RadioButton.Content>
                    <Image Source="/Images maps/AffTombe.png" Width="180" Height="180"/>
                </RadioButton.Content>
            </RadioButton>

            <RadioButton x:Name="RadMapGlace" GroupName="Cartes" Click="RadMapGlace_Click"
                         Width="198" Height="182">
                <RadioButton.Content>
                    <Image Source="/Images maps/AffGlace.png" Width="180" Height="180"/>
                </RadioButton.Content>
            </RadioButton>

        </StackPanel>

    </Grid>
</UserControl>
